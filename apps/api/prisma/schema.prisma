generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  phone     String   @unique
  createdAt DateTime @default(now())
  caseSessions  Session[]
  authSessions AuthSession[]
}

model AuthSession {
  id         String   @id @default(cuid())
  userId     String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  revokedAt  DateTime?
  userAgent  String?
  ip         String?

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model LoginChallenge {
  id         String   @id @default(cuid())
  phone      String
  codeHash   String
  channel    String   // telegram|max|sms
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  resendAt   DateTime
  attemptsLeft Int    @default(5)
  verifiedAt DateTime?

  @@index([phone])
}

model Case {
  id         String   @id
  title      String
  tags       String[] @default([])
  difficulty Int      @default(1)
  method     String   @default("CBT")
  payload    Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  sessions   Session[]
}

model Session {
  id              String   @id @default(cuid())
  userId          String
  caseId          String
  number          Int      @default(1)
  status          String   @default("active")
  startedAt       DateTime @default(now())
  endedAt         DateTime?

  caseStateBefore Json?
  caseStateAfter  Json?

  currentStageId    String?
  completedStageIds String[] @default([])

  user     User   @relation(fields: [userId], references: [id])
  case     Case   @relation(fields: [caseId], references: [id])

  messages Message[]
  report   Report?

  @@index([userId, caseId])
}

model Message {
  id        String   @id @default(cuid())
  sessionId String
  role      String
  content   String
  createdAt DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id])

  @@index([sessionId, createdAt])
}

model Report {
  id        String   @id @default(cuid())
  sessionId String   @unique
  summary   String
  scores    Json
  payload   Json
  createdAt DateTime @default(now())

  session Session @relation(fields: [sessionId], references: [id])
}
